import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner a = new Scanner(System.in);
        int b = a.nextInt();
        for(int i = 0; i < b; i++){
            for(int m = 0; m < i; m++ ){
                System.out.print(" ");
            }
            for(int k = 0; k < (2*(b-i))-1 ; k++){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
